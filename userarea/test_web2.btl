<?btl
{ tag : "html" , content : [ ] } var html
{ tag : "head" , content : [ ] } var head
{ tag : "body" , content : [ "Contenu de la page" ] } var body
"content" head @ html cell+
"content" body @ html cell+
{ tag : "title" , content : [ "Ceci est une page test" ] } var title
"content" title @ head cell+
cls
html @ .cr

html "content" cell@ .cr

html "content" cell@ 0 cell@ .cr

html "content" cell@ 1 cell@ .cr

html "content" cell@ 1 cell@ "content" cell@ 0 cell@ .cr
cr cr
defer generate
( usage : html @ -- )
:noname 
	dup >r
	"<<!0!>>" [ r> "tag" cell@ ] format .cr
	dup "content" cell@ local content
    content @ .cr
    content @ cells .cr
    "" local item
	content @ cells 0 var i 
	do
        content @ i @ cell@ .cr
		content @ i @ cell@ item !
        item @ .cr
		item @ ?str
		if
			item @ .
		else
			item @ generate
		then
	loop
	dup >r
	"</<!0!>>" [ r> "tag" cell@ ] format .
;
is generate

html @ generate
?>