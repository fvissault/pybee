<?btl
{ tag : "html" , content : [ ] } var html
{ tag : "head" , content : [ ] } var head
{ tag : "body" , content : [ "Contenu de la page" ] } var body
"content" head @ html cell+
"content" body @ html cell+
{ tag : "title" , content : [ "Ceci est une page test" ] } var title
"content" title @ head cell+
cls

"generate" ?def invert if
	defer generate
	( usage : html @ -- )
	:noname
		dup "tag" cell@ local tag
		dup "content" cell@ local content
		tag @ "html" = if "<!DOCTYPE html>" .cr then
		"<<!0!>>" [ tag @ ] format .cr
    	0 local item
		0 local i
		content @ cells i
		do
			content @ i @ cell@ item !
			item @ ?str
			if
				item @ .cr
			else
				item @ generate
			then
		loop
		"</<!0!>>" [ tag @ ] format .cr
	;
	is generate
then
html @ generate

forget html
forget head
forget title
forget body
?>